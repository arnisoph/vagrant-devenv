#!/bin/bash


packer_params=( \
  "-var release=0.1" \
  "-var headless=false" \
  "-only=virtualbox" \
  "-var-file=configs/debian-7/minimal.json" \
  "templates/debian-7/template.json"
)

packer build ${packer_params[@]}


